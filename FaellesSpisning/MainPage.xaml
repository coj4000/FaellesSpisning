<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaellesSpisning"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:FaellesSpisning.ViewModel"
    x:Class="FaellesSpisning.MainPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="333" Margin="672,40,0,0" VerticalAlignment="Top" Width="265" ItemsSource="{Binding TilmeldListe}">
            <ListView.DataContext>
                <ViewModel:FSViewModel/>
            </ListView.DataContext>
        </ListView>
        <TextBox x:Name="Navn" HorizontalAlignment="Left" Height="45" Margin="128,478,0,0" TextWrapping="Wrap" Text="" PlaceholderText="Navn" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="Stilling" HorizontalAlignment="Left" Height="45" Margin="343,478,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" PlaceholderText="Stilling"/>
        <TextBox x:Name="Dag" HorizontalAlignment="Left" Height="45" Margin="235,478,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="108" PlaceholderText="Dag"/>
        <TextBox x:Name="Pris" HorizontalAlignment="Left" Height="45" Margin="343,523,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" PlaceholderText="Pris"/>
        <TextBox x:Name="Dag1" HorizontalAlignment="Left" Height="45" Margin="235,523,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="108" PlaceholderText="Dag"/>
        <TextBox x:Name="Ret" HorizontalAlignment="Left" Height="45" Margin="128,523,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" PlaceholderText="Ret"/>
        <Button x:Name="Tilføj" Content="Tilføj" HorizontalAlignment="Left" Height="45" Margin="450,478,0,0" VerticalAlignment="Top" Width="108"/>
        <Button x:Name="Rediger" Content="Rediger" HorizontalAlignment="Left" Height="45" Margin="450,523,0,0" VerticalAlignment="Top" Width="108" Click="Rediger_OnClick"/>
        <TextBox x:Name="Stilling_Copy" HorizontalAlignment="Left" Height="45" Margin="704,462,0,0" TextWrapping="Wrap" Text="Bolig" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="Stilling_Copy1" HorizontalAlignment="Left" Height="45" Margin="615,523,0,0" TextWrapping="Wrap" Text="Bolig" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="Stilling_Copy2" HorizontalAlignment="Left" Height="45" Margin="615,462,0,0" TextWrapping="Wrap" Text="Dag" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="Tilføj_Copy" Content="Tilføj" HorizontalAlignment="Left" Height="45" Margin="794,462,0,0" VerticalAlignment="Top" Width="77"/>
        <Button x:Name="Tilføj_Copy1" Content="Hent" HorizontalAlignment="Left" Height="45" Margin="794,523,0,0" VerticalAlignment="Top" Width="77"/>
        <Button x:Name="buttonredirect" Content="Beregning" HorizontalAlignment="Left" Margin="34,376,0,0" VerticalAlignment="Top" Click="Buttonredirect_OnClick" Height="59" Width="106"/>
        <ListView x:Name="listView1" HorizontalAlignment="Left" Height="319" Margin="34,40,0,0" VerticalAlignment="Top" Width="524" ItemsSource="{Binding Skema}" >
            <ListView.DataContext>
                <ViewModel:FSViewModel/>
            </ListView.DataContext>
        </ListView>
    </Grid>
</Page>
